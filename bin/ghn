#!/usr/bin/env ruby
$LOAD_PATH << File.join(__dir__, '..', 'lib')
require 'ghn'
require 'optparse'

token = Ghn::Token.new
unless token.valid?
  token.print_no_access_token_exit!
end

command = Ghn::Command.new(ARGV)
unless command.valid?
  command.print_invalid
  Ghn::Options.print_usage_exit
end

ghn = Ghn.new(token, command, options)
ghn.run_print
